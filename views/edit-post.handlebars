<section>
    <a href="/dashboard" class="btn btn-light"><i class="fas fa-arrow-left"></i>Back to Dash</a>
    <h1 class="large text-primary">Edit Post</h1>
    <form class="editPostForm">
        <div>
            <input name="postTitle" type="text" value="{{post.title}}"/>
        </div>
        <div>
            <textarea name="postContent" cols="30" rows="5">{{post.postContent}}</textarea>
        </div>
        <div>
            Posted by {{post.user.username}} on {{format_date post.createdAt}}
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="updatePost btn btn-success">Update Post</button>
        <button type="button" class="deletePost btn btn-warning">Delete</button>
    </form>
</section>

<form class="newCommentForm">
    <div>
        <textarea name="commentBody" cols="30" rows="10"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

{{!-- import scripts --}}
<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/newComment.js"></script>