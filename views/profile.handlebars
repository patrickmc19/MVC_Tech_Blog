<section class="row">
    <div class="column">
        <h2>Create New Post!</h2>
        <form class="newPostForm">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" placeholder="Title">
            <label for="postContent">Body</label>
            <textarea id="postContent" name="postContent" placeholder="Write something here..."></textarea>
            <button type="submit" class="button">Post</button>
        </form>
    </div>
</section>

{{#if posts.length}}
<section>
    <div class="column">
        <h2>Your Posts</h2>
        {{#each posts}}
        <div class="card">
            <div class="card-divider">
                <h3>{{title}}</h3>
            </div>
            <div class="card-section">
                <p>{{postContent}}</p>
                <a href="/post/{{id}}">View Post</a>
            </div>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<script src="/js/newPost.js"></script>